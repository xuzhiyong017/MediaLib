<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rectImage="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.sky.medialib.ui.kit.common.view.RectImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="1.0dip"
        android:scaleType="centerCrop"
        rectImage:boundColor="#ffff5f5f"
        rectImage:boundWidth="1.0dip"
        rectImage:maskColor="#66000000" />

    <ImageView
        android:id="@+id/mask"
        android:layout_width="fill_parent"
        android:layout_height="20.0dip"
        android:layout_alignParentBottom="true"
        android:background="#66202223" />

    <ImageView
        android:id="@+id/video_tag"
        android:layout_width="12.0dip"
        android:layout_height="12.0dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5.0dip"
        android:layout_marginBottom="4.0dip"
        android:src="@drawable/album_video_icon"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="20.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5.0dip"
        android:gravity="center_vertical"
        android:textColor="#ffffffff"
        android:visibility="gone" />
</RelativeLayout>