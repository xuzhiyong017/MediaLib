<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="1.0dip"
    android:paddingTop="6.0dip"
    android:paddingRight="1.0dip">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.sky.medialib.ui.kit.view.VideoEffectIconView
            android:id="@+id/effect_icon"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:padding="@dimen/video_effect_blur_radius"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@+id/effect_loading"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/effect_reload"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/effects_time_refresh" />
    </RelativeLayout>

    <TextView
        android:id="@+id/effect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.0dip"
        android:textColor="#ffffffff"
        android:textSize="12.0sp" />
</LinearLayout>