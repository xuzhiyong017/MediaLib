<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="bottom" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/content_layout"
        android:background="#80202223"
        android:layout_width="fill_parent"
        android:layout_height="75.0dip">
        <RadioGroup
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/beauty_level_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true">
            <RadioButton
                android:textSize="16.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/level_0"
                android:background="@drawable/selector_beauty_cancel_bg"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:checked="true"
                android:button="@null" />
            <RadioButton
                android:textSize="16.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/level_1"
                android:background="@drawable/selector_beauty_level_bg"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:button="@null"
                android:text="1" />
            <RadioButton
                android:textSize="16.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/level_2"
                android:background="@drawable/selector_beauty_level_bg"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:button="@null"
                android:text="2" />
            <RadioButton
                android:textSize="16.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/level_3"
                android:background="@drawable/selector_beauty_level_bg"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:button="@null"
                android:text="3" />
            <RadioButton
                android:textSize="16.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/level_4"
                android:background="@drawable/selector_beauty_level_bg"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:button="@null"
                android:text="4" />
            <RadioButton
                android:textSize="16.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/level_5"
                android:background="@drawable/selector_beauty_level_bg"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:button="@null"
                android:text="5" />
        </RadioGroup>
    </RelativeLayout>
    <View
        android:id="@+id/separator_line"
        android:background="#ff303233"
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/bottom_bar"
        android:background="#ff202223"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="55.0dip">
        <TextView
            android:textSize="11.0sp"
            android:textColor="@color/selector_camera_beauty_text"
            android:gravity="center"
            android:id="@+id/white_btn"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="美白"
            android:drawableTop="@drawable/camera_bottombar_white"
            android:layout_weight="1.0" />
        <TextView
            android:textSize="11.0sp"
            android:textColor="@color/selector_camera_beauty_text"
            android:gravity="center"
            android:id="@+id/buffing_btn"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="磨皮"
            android:drawableTop="@drawable/camera_bottombar_buffing"
            android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>